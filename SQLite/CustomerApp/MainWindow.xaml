<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="顧客管理 Application" Height="600" Width="820">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 入力フォーム -->
        <StackPanel Grid.Column="0" Margin="10">

            <TextBlock Text="名前" Margin="0,5"/>
            <TextBox x:Name="NameTextBox" Width="180"/>

            <TextBlock Text="電話番号" Margin="0,10,0,5"/>
            <TextBox x:Name="PhoneTextBox" Width="180"/>

            <TextBlock Text="住所" Margin="0,10,0,5"/>
            <TextBox x:Name="AddressTextBox"
         Width="148"
         Foreground="DarkGreen"
         TextChanged="AddressTextBox_TextChanged"/>

            <TextBlock Text="郵便番号" Margin="0,10,0,5"/>
            <TextBox x:Name="PostcodeTextBox" Width="120"
                     IsReadOnly="True"
                     Foreground="DarkBlue"/>

            <TextBlock Text="画像" Margin="0,10,0,5"/>
            <Image x:Name="CustomerImage" Height="120" Width="120" Stretch="Uniform"/>
            <Button Content="画像を選択" Click="SelectImage_Click" Margin="0,10,0,0"/>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="追加" Width="60" Click="Add_Click"/>
                <Button Content="更新" Width="60" Margin="10,0,0,0" Click="Update_Click"/>
                <Button Content="削除" Width="60" Margin="10,0,0,0" Click="Delete_Click"/>
            </StackPanel>

            <TextBlock Text="検索" Margin="0,20,0,5"/>
            <TextBox x:Name="SearchTextBox" Width="180"
                     TextChanged="SearchTextBox_TextChanged"/>
            <Button Content="クリア" Width="60" Click="ClearSearchButton_Click" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- 顧客一覧 -->
        <ListView x:Name="CustomerListView"
                  Grid.Column="2"
                  Margin="10"
                  SelectionChanged="CustomerListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="40" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="郵便番号" Width="80" DisplayMemberBinding="{Binding Postcode}"/>
                    <GridViewColumn Header="名前" Width="100" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="電話番号" Width="100" DisplayMemberBinding="{Binding Phone}"/>
                    <GridViewColumn Header="住所" Width="180" DisplayMemberBinding="{Binding Address}"/>
                    <GridViewColumn Header="画像" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Width="60" Height="60" Source="{Binding ImageSource}" Stretch="Uniform"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
