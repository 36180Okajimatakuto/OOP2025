<Window x:Class="ColorChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorChecker"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左：色の表示領域 -->
        <Label x:Name="colorArea" Margin="10" Background="Black" Grid.Column="0" BorderBrush="Black" BorderThickness="1"/>

        <!-- 中央：RGBスライダー + ComboBox -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- RGBスライダー -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- R -->
                <Label Content="R:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                <Slider x:Name="rSlider" Minimum="0" Maximum="255" Grid.Row="0" ValueChanged="Slider_ValueChanged" Grid.ColumnSpan="3" Margin="42,29,42,17"/>
                <TextBlock x:Name="rValue" Grid.Column="2" VerticalAlignment="Center"/>

                <!-- G -->
                <Label Content="G:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                <Slider x:Name="gSlider" Minimum="0" Maximum="255" Grid.Row="1" ValueChanged="Slider_ValueChanged" Grid.ColumnSpan="3" Margin="42,27,42,10"/>
                <TextBlock x:Name="gValue" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center"/>

                <!-- B -->
                <Label Content="B:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                <Slider x:Name="bSlider" Minimum="0" Maximum="255" Grid.Row="2" Grid.Column="1" ValueChanged="Slider_ValueChanged" Grid.ColumnSpan="2" Margin="0,30,42,10"/>
                <TextBlock x:Name="bValue" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center"/>
            </Grid>

            <!-- ComboBox (高さ固定、幅いっぱい) -->
            <ComboBox x:Name="colorSelectComboBox" Grid.Row="1" SelectionChanged="colorSelectComboBox_SelectionChanged"
                      DisplayMemberPath="Name" Height="30" Margin="0,10,0,0" HorizontalAlignment="Stretch"/>
        </Grid>

        <!-- 右：色名入力と登録ボタン、リスト -->
        <Grid Grid.Column="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 名前入力 + 登録ボタン -->
            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                <Grid Width="120" Height="23" Margin="0,0,5,0">
                    <TextBox x:Name="colorNameTextBox" TextChanged="colorNameTextBox_TextChanged" Margin="0,0,-33,0"/>
                    <TextBlock x:Name="placeholderText" Text="名前" IsHitTestVisible="False" Foreground="Gray" 
                               VerticalAlignment="Center" Margin="5,0,-33,0"/>
                </Grid>
                <Button x:Name="stockButton" Content="登録" Click="stockButton_Click" MinWidth="60" Margin="28,0,0,0"/>
            </StackPanel>

            <!-- リスト (高さは利用可能エリア全部) -->
            <ListBox x:Name="stockList" Grid.Row="1" SelectionChanged="stockList_SelectionChanged" Margin="0" VerticalAlignment="Stretch"/>
        </Grid>
    </Grid>
</Window>