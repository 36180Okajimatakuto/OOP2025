<Window x:Class="ColorChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorChecker"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="colorArea" Margin="0,10,10,10" Background="Black" Grid.Column="0" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Right" Width="213"/>

        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- RGBスライダー -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- R -->
                <Label Content="R:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontSize="20" Height="35" Margin="2,0,1,0"/>
                <Slider x:Name="rSlider" Minimum="0" Maximum="255" Grid.Row="0" ValueChanged="Slider_ValueChanged" Grid.ColumnSpan="3" Margin="42,29,42,17"/>
                <TextBlock x:Name="rValue" Grid.Column="2" VerticalAlignment="Center"/>

                <!-- G -->
                <Label Content="G:" Grid.Row="1" Grid.Column="0" FontSize="20" VerticalAlignment="Center"/>
                <Slider x:Name="gSlider" Minimum="0" Maximum="255" Grid.Row="1" ValueChanged="Slider_ValueChanged" Grid.ColumnSpan="3" Margin="42,27,42,10"/>
                <TextBlock x:Name="gValue" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center"/>

                <!-- B -->
                <Label Content="B:" Grid.Row="2" Grid.Column="0" FontSize="20" VerticalAlignment="Center"/>
                <Slider x:Name="bSlider" Minimum="0" Maximum="255" Grid.Row="2" Grid.Column="1" ValueChanged="Slider_ValueChanged" Grid.ColumnSpan="2" Margin="0,30,42,10"/>
                <TextBlock x:Name="bValue" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center"/>
            </Grid>


            <ComboBox x:Name="colorSelectComboBox"
                      Grid.Row="1"
                      SelectionChanged="colorSelectComboBox_SelectionChanged"
                      Height="30"
                      Margin="0,10,0,0"
                      HorizontalAlignment="Stretch">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="2">
                            <Rectangle Width="16" Height="16" Stroke="Black" StrokeThickness="0.5" Margin="0,0,5,0">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="{Binding Color}"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>        </Grid>

        <!-- 右：色名入力と登録ボタン、リスト -->
        <Grid Grid.Column="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 名前入力 + 登録ボタン -->
            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="-23,0,0,10" HorizontalAlignment="Left" Width="236">
                <Grid Width="120" Height="23" Margin="0,0,5,0">
                    <TextBox x:Name="colorNameTextBox" TextChanged="colorNameTextBox_TextChanged" Margin="24,0,-30,0" Height="23" VerticalAlignment="Top"/>
                    <TextBlock x:Name="placeholderText" Text="名前" IsHitTestVisible="False" Foreground="Gray" 
                   VerticalAlignment="Center" Margin="24,0,-30,0"/>
                </Grid>
                <Button x:Name="stockButton" Content="登録" Click="stockButton_Click" MinWidth="1" Margin="28,0,0,0" Width="33"/>
                <Button x:Name="deleteButton" Content="削除" Click="deleteButton_Click" MinWidth="22" Margin="11,0,0,0" Width="32" RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="1"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>
            </StackPanel>

            <!-- リスト (高さは利用可能エリア全部) -->
            <ListBox x:Name="stockList" Grid.Row="1" SelectionChanged="stockList_SelectionChanged" VerticalAlignment="Top" Height="221" Margin="0,10,0,0"/>
        </Grid>
    </Grid>
</Window>