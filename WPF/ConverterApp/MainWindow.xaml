<Window x:Class="ConverterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ConverterApp" SizeToContent="WidthAndHeight" Height="180" Width="300">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- メトリック側 -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,6">
            <TextBox Width="140" Name="MetricValue" Margin="4" VerticalContentAlignment="Center"/>
            <ComboBox Name="MetricUnit" Width="100" Margin="4"/>
        </StackPanel>

        <!-- 変換ボタン -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Margin="0,0,0,6">
            <Button Name="ImperialUnitToMetric" Margin="4" Width="44" Content="▲" Click="ImperialUnitToMetric_Click"/>
            <Button Name="MetricToImperialUnit" Margin="4" Width="44" Content="▼" Click="MetricToImperialUnit_Click"/>
        </StackPanel>

        <!-- インペリアル側 -->
        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <TextBox Name="ImperialValue" Margin="4" Width="140" VerticalContentAlignment="Center"/>
            <ComboBox Name="ImperialUnit" Margin="4" Width="100" SelectionChanged="ImperialUnit_SelectionChanged"/>
        </StackPanel>
    </Grid>
</Window>