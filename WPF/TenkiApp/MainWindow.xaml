<Window x:Class="TenkiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TenkiApp"
        mc:Ignorable="d"
        Title="Weather App" Height="600" Width="1000">

    <Window.Resources>
        <!-- Watermark for TextBox -->
        <Style x:Key="WatermarkTextBox" TargetType="TextBox">
            <Style.Setters>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="Text" Value="">
                    <Setter Property="Foreground" Value="Gray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Define Column Definitions for Split Layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <!-- Left Column (Weather Info) -->
            <ColumnDefinition Width="Auto" />
            <!-- Splitter -->
            <ColumnDefinition Width="2*" />
            <!-- Right Column (Search and Controls) -->
        </Grid.ColumnDefinitions>

        <!-- Left Column: Weather Information -->
        <Grid Grid.Column="0" Background="#e0f7fa" HorizontalAlignment="Left" Width="351">
            <TextBlock Text="現在の天気" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,41,0,0"/>

            <!-- Display Weather Info -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,262,0,0" Height="312">
                <TextBlock x:Name="WeatherDescription" FontSize="20" HorizontalAlignment="Center" Margin="0,100,0,-100"/>
                <Image x:Name="WeatherIcon" Width="166" Height="100" HorizontalAlignment="Center" Margin="0,10"/>
                <TextBlock x:Name="Temperature" FontSize="40" HorizontalAlignment="Center" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0">
                    <TextBlock Text="湿度: " FontSize="24"/>
                    <TextBlock x:Name="Humidity" FontSize="24" FontWeight="Bold"/>
                    <TextBlock Text="風速: " FontSize="24" Margin="20,0,0,0"/>
                    <TextBlock x:Name="WindSpeed" FontSize="24" FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>

            <!-- Display 2-hour Forecast -->
            <TextBlock Text="時間ごとの予報" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,96,0,0" Height="550" VerticalAlignment="Top"/>
            <WrapPanel x:Name="HourlyForecast" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0"/>
        </Grid>

        <!-- Splitter: Allows resizing the left and right sections -->
        <GridSplitter HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                      Grid.Column="1" Width="5" Background="#B0BEC5"/>

        <!-- Right Column: Search and Control Section -->
        <Grid Background="#f5f5f5" Grid.ColumnSpan="3" Margin="351,0,0,0">
            <TextBlock Text="天気を調べよう！" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"/>
            <ComboBox
                x:Name="CityInput" 
                FontSize="30" 
                Width="250" 
                Height="40" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Margin="0,60,0,0"
                IsEditable="True">
                <ComboBoxItem Content="東京"/>
                <ComboBoxItem Content="大阪"/>
                <ComboBoxItem Content="京都"/>
                <ComboBoxItem Content="札幌"/>
                <ComboBoxItem Content="福岡"/>
                <ComboBoxItem Content="名古屋"/>
                <ComboBoxItem Content="仙台"/>
                <ComboBoxItem Content="千葉"/>
                <ComboBoxItem Content="埼玉"/>
                <ComboBoxItem Content="広島"/>
                <ComboBoxItem Content="神戸"/>
                <ComboBoxItem Content="長崎"/>
                <ComboBoxItem Content="鹿児島"/>
                <ComboBoxItem Content="沖縄"/>
                <ComboBoxItem Content="横浜"/>
                <ComboBoxItem Content="新潟"/>
                <ComboBoxItem Content="岡山"/>
                <ComboBoxItem Content="高松"/>
                <ComboBoxItem Content="松山"/>
                <ComboBoxItem Content="那覇"/>
            </ComboBox>
            <!-- Search Button -->
            <Button Content="Search" Width="100" Height="40" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,110,0,0" Background="#1E88E5" Foreground="White" FontWeight="Bold" Click="SearchWeather"/>

            <!-- Display Current Weather Data -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,160,0,0">
                <TextBlock FontSize="40" Text="" />
                <TextBlock x:Name="CurrentWeatherDescription" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock x:Name="CurrentTemperature" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"/>

                <!-- ▼▼ ここから6大都市の天気 ▼▼ -->
                <StackPanel Margin="0,-40,0,0">
                    <TextBlock Text="日本の主要都市の天気" 
                   FontSize="36"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

                    <WrapPanel x:Name="MajorCitiesWeatherPanel" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,10,0,0"
                   ItemWidth="100"
                   ItemHeight="120">
                        <!-- 都市ごとの要素はコードビハインドで自動生成する -->
                    </WrapPanel>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
