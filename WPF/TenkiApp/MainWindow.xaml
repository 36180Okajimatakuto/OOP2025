<Window x:Class="TenkiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TenkiApp"
        mc:Ignorable="d"
        Title="Weather App" Height="600" Width="1000">

    <Window.Resources>
        
        <!-- Watermark for TextBox -->
        <Style x:Key="WatermarkTextBox" TargetType="TextBox">
            <Style.Setters>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="Text" Value="">
                    <Setter Property="Foreground" Value="Gray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Define Column Definitions for Split Layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <!-- Left Column (Weather Info) -->
            <ColumnDefinition Width="Auto" />
            <!-- Splitter -->
            <ColumnDefinition Width="2*" />
            <!-- Right Column (Search and Controls) -->
        </Grid.ColumnDefinitions>

        <!-- Left Column: Weather Information -->
        <Grid Grid.Column="0" Background="LightBlue" HorizontalAlignment="Left" Width="351" >
            <TextBlock Text="現在の天気" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,41,0,0"/>

            <!-- Display Weather Info -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,-7,0,0" Height="267">
                <TextBlock x:Name="WeatherDescription" FontSize="20" HorizontalAlignment="Center" Margin="0,100,0,-100"/>
                <Image x:Name="WeatherIcon" Width="166" Height="100" HorizontalAlignment="Center" Margin="0,10"/>
                <TextBlock x:Name="Temperature" FontSize="40" HorizontalAlignment="Center" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0">
                    <TextBlock Text="湿度: " FontSize="24"/>
                    <TextBlock x:Name="Humidity" FontSize="24" FontWeight="Bold"/>
                    <TextBlock Text="風速: " FontSize="24" Margin="20,0,0,0"/>
                    <TextBlock x:Name="WindSpeed" FontSize="24" FontWeight="Bold"/>


                    <!--<TextBlock Text="体感温度" FontSize="24" Margin= "0,20,0,0"/>
                    <TextBlock x:Name="apparent_temperature" FontSize="24" FontWeight="Bold"/>-->
                    <!--#endregion-->
                </StackPanel>
            </StackPanel>

            <!-- Display 2-hour Forecast -->
            <TextBlock Text="時間ごとの予報" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,280,0,0" Height="82" VerticalAlignment="Top"/>
            <WrapPanel x:Name="HourlyForecast" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,300,0,0"/>
        </Grid>

        <!-- Splitter: Allows resizing the left and right sections -->
        <GridSplitter HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                      Grid.Column="1" Width="5" Background="#B0BEC5"/>

        <!-- Right Column: Search and Control Section -->
        <Grid Background="#f5f5f5" Grid.ColumnSpan="3" Margin="351,0,0,0">
            <TextBlock Text="天気を調べよう！" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"/>
            <ComboBox
                x:Name="CityInput" 
                FontSize="30" 
                Width="250" 
                Height="40" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Margin="0,60,0,0"
                IsEditable="True"
                SelectionChanged="CityComboBox_SelectionChanged">
                <ComboBoxItem Content="東京"/>
                <ComboBoxItem Content="大阪"/>
                <ComboBoxItem Content="京都"/>
                <ComboBoxItem Content="札幌"/>
                <ComboBoxItem Content="福岡"/>
                <ComboBoxItem Content="名古屋"/>
                <ComboBoxItem Content="仙台"/>
                <ComboBoxItem Content="千葉"/>
                <ComboBoxItem Content="埼玉"/>
                <ComboBoxItem Content="広島"/>
                <ComboBoxItem Content="神戸"/>
                <ComboBoxItem Content="長崎"/>
                <ComboBoxItem Content="鹿児島"/>
                <ComboBoxItem Content="沖縄"/>
                <ComboBoxItem Content="横浜"/>
                <ComboBoxItem Content="新潟"/>
                <ComboBoxItem Content="岡山"/>
                <ComboBoxItem Content="高松"/>
                <ComboBoxItem Content="松山"/>
                <ComboBoxItem Content="那覇"/>
                <ComboBoxItem Content="太田" />
                <ComboBoxItem Content="伊勢崎" />
                <ComboBoxItem Content="桐生" />
                <ComboBoxItem Content="青森" />
                <ComboBoxItem Content="秋田" />
                <ComboBoxItem Content="富山" />
                <ComboBoxItem Content="石川" />
                <ComboBoxItem Content="福井" />
                <ComboBoxItem Content="滋賀" />
                <ComboBoxItem Content="奈良" />
                <ComboBoxItem Content="和歌山" />
                <ComboBoxItem Content="三重" />
                <ComboBoxItem Content="群馬" />
                <ComboBoxItem Content="長野" />
                <ComboBoxItem Content="山梨" />
                <ComboBoxItem Content="愛知" />
                <ComboBoxItem Content="岐阜" />
                <ComboBoxItem Content="静岡" />
                <ComboBoxItem Content="佐賀" />
                <ComboBoxItem Content="大分" />
                <ComboBoxItem Content="宮崎" />
                <ComboBoxItem Content="山口" />
                <ComboBoxItem Content="高知" />
                <ComboBoxItem Content="熊本" />
                <ComboBoxItem Content="福島" />
                <ComboBoxItem Content="茨城" />
                <ComboBoxItem Content="栃木" />
                <ComboBoxItem Content="宮城" />
                <ComboBoxItem Content="札幌" />
                <ComboBoxItem Content="函館" />
                <ComboBoxItem Content="旭川" />
                <ComboBoxItem Content="帯広" />
                <ComboBoxItem Content="釧路" />
                <ComboBoxItem Content="北見" />
                <ComboBoxItem Content="室蘭" />
                <ComboBoxItem Content="苫小牧" />
                <ComboBoxItem Content="小樽" />
                <ComboBoxItem Content="北海道"/>
            </ComboBox>
            <!-- Search Button -->

            <!-- Display Current Weather Data -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,160,0,0" Background="Beige">
                <TextBlock FontSize="40" Text="" />
                <TextBlock x:Name="CurrentWeatherDescription" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock x:Name="CurrentTemperature" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"/>

                <!-- ▼▼ ここから6大都市の天気 ▼▼ -->
                <StackPanel Margin="0,-40,0,0">
                    <TextBlock Text="日本の主要都市の天気" 
                   FontSize="36"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

                    <WrapPanel x:Name="MajorCitiesWeatherPanel" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,10,0,0"
                   ItemWidth="100"
                   ItemHeight="120">
                        <!-- 都市ごとの要素はコードビハインドで自動生成する -->
                    </WrapPanel>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
